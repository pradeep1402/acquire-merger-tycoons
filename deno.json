{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["camelcase"]
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 80,
      "indentWidth": 2
    }
  },
  "imports": {
    "assert": "jsr:@std/assert@^1.0.12",
    "testing": "jsr:@std/testing@^1.0.11",
    "hono": "npm:hono@^4.7.6",
    "lodash": "npm:lodash@^4.17.21"
  },
  "tasks": {
    "start": "deno run -A --watch main.js",
    "test": "deno test -A",
    "test-watch": "deno test --watch -A",
    "lint": "deno lint",
    "test-coverage": "deno test -A --coverage=coverage",
    "coverage": {
      "command": "deno coverage --html",
      "dependencies": ["test-coverage"]
    }
  },
  "test": {
    "include": ["src/*", "test/*"]
  }
}
