{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["camelcase"]
    }
  },
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 2
  },
  "imports": {
    "assert": "jsr:@std/assert@^1.0.12",
    "testing": "jsr:@std/testing@^1.0.11",
    "hono": "npm:hono@^4.7.6",
    "lodash": "npm:lodash@^4.17.21"
  },
  "tasks": {
    "start": "deno run -A --watch main.ts",
    "test": "deno test -A",
    "test-watch": "deno test --watch -A",
    "lint": "deno lint",
    "test-coverage": "rm -rf coverage && deno test -A --coverage",
    "coverage": {
      "command": "deno coverage --html",
      "dependencies": ["test-coverage"]
    }
  },
  "test": {
    "include": ["src/*", "test/*"]
  },
  "deploy": {
    "project": "b83ceb80-cc93-4119-930a-59f27e1a5a0c",
    "exclude": ["**/node_modules"],
    "include": [],
    "entrypoint": "main.ts"
  }
}
